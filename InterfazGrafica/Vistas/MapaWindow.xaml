<Window x:Class="InterfazGrafica.Vistas.MapaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mapa familiar" Height="400" Width="600">
    <Grid x:Name="GridMapa"
          Background="LightGray"
          MouseLeftButtonDown="GridMapa_MouseLeftButtonDown">
        <TextBlock Text="Haz clic en el mapa para elegir la posición"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,10,0,0"
                   FontWeight="Bold"/>
    </Grid>
</Window>

