<Window x:Class="InterfazGrafica.Vistas.MapaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mapa familiar" Height="515.04" Width="730">
    <Grid x:Name="GridMapa"
          MouseLeftButtonDown="GridMapa_MouseLeftButtonDown">
        <Grid.Background>
            <ImageBrush ImageSource="/Recursos/MapaMundo.jpg"/>
        </Grid.Background>
        <TextBlock Text="Haz clic en el mapa para elegir la ubicación"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,10,0,0"
                   FontWeight="Bold" FontSize="16"/>
    </Grid>
</Window>

