<UserControl x:Class="InterfazGrafica.Vistas.MapaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid>
        <!-- 2 filas: encabezado y contenido -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- encabezado -->
            <RowDefinition Height="*"/>
            <!-- mapa -->
        </Grid.RowDefinitions>

        <!-- Encabezado (los margenes minimos) -->
        <DockPanel Grid.Row="0" Background="#E5E7EB" LastChildFill="False">
            <TextBlock Text="No olvides refrescar al añadir a alguien!"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       FontWeight="Bold"
                       DockPanel.Dock="Left" FontSize="14"/>

            <!-- Boton de REFRESCAR solo notifica a la capa superior de redibujar -->
            <Button x:Name="BtnRefrescar"
                    Content="Refrescar"
                    Margin="0,5,8,5"
                    Padding="12,4"
                    DockPanel.Dock="Right"
                    Click="BtnRefrescar_Click" FontSize="14"/>
        </DockPanel>

        <!-- Contenido: imagen de fondo + capa de dibujo encima -->
        <Grid Grid.Row="1" Margin="6">
            <!-- Imagen de fondo -->
            <Image x:Name="ImgMapa"
                   Source="pack://application:,,,/Recursos/MapaMundo.jpg"
                   Stretch="UniformToFill"
                   SnapsToDevicePixels="True"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Capa encima para nodos/relaciones -->
            <!-- Capa transparente encima de la imagen de fondo-->
            <!-- Es la capa overlay donde se dibujan los nodos -->
            <Canvas x:Name="MapaCanvas" 
                    Background="Transparent"/>
        </Grid>
    </Grid>
</UserControl>

