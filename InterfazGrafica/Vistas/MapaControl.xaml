<UserControl x:Class="InterfazGrafica.Vistas.MapaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid>
        <!-- 2 filas: encabezado y contenido -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- encabezado -->
            <RowDefinition Height="*"/>
            <!-- mapa -->
        </Grid.RowDefinitions>

        <!-- Encabezado (los margenes minimos) -->
        <DockPanel Grid.Row="0" Background="#E5E7EB" LastChildFill="False">
            <TextBlock Text="Mapa del mundo"
                       Margin="10,0,0,0"
                       FontWeight="Bold"
                       DockPanel.Dock="Left" FontSize="20" Height="31" Width="163"/>

            
        </DockPanel>

        <!-- Contenido: imagen de fondo + capa de dibujo encima -->
        <Grid Grid.Row="1" Margin="6">
            <!-- Imagen de fondo -->
            <Image x:Name="ImgMapa"
                   Source="pack://application:,,,/Recursos/MapaMundo.jpg"
                   Stretch="UniformToFill"
                   SnapsToDevicePixels="True"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Capa encima para nodos/relaciones -->
            <!-- Capa transparente encima de la imagen de fondo-->
            <!-- Es la capa overlay donde se dibujan los nodos -->
            <Canvas x:Name="MapaCanvas" 
                    Background="Transparent"/>
        </Grid>
    </Grid>
</UserControl>

