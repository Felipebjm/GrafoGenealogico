<UserControl x:Class="InterfazGrafica.Vistas.AgregarFamiliarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterfazGrafica.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- título -->
            <RowDefinition Height="*"/>
            <!-- contenido -->
        </Grid.RowDefinitions>

        <TextBlock Text="Agregar familiar"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Contenido principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- formulario -->
                <ColumnDefinition Width="1.2*"/>
                <!-- preview / extra -->
            </Grid.ColumnDefinitions>

            <!-- FORMULARIO -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <!-- Nombre -->
                <TextBlock Text="Nombre:"/>
                <TextBox x:Name="TxtNombre" Margin="0,0,0,8"/>

                <!-- Cédula -->
                <TextBlock Text="Cédula:"/>
                <TextBox x:Name="TxtCedula" Margin="0,0,0,8"/>

                <!-- Fecha de nacimiento y edad -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <StackPanel Width="180">
                        <TextBlock Text="Fecha de nacimiento:"/>

                        <!-- DatePicker para seleccionar fecha -->
                        <DatePicker x:Name="DpFechaNacimiento"/>
                    </StackPanel>

                    <StackPanel Margin="10,0,0,0" Width="80">
                        <TextBlock Text="Edad:"/>
                        <TextBox x:Name="TxtEdad"/>
                    </StackPanel>
                </StackPanel>

                <!-- ¿Esta vivo? -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <CheckBox x:Name="ChkVivo" IsChecked="True"/>
                    <TextBlock Text="¿Está vivo?" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Ubicacion -->
                <TextBlock Text="Ubicación en el mapa:" FontWeight="Bold" Margin="0,10,0,4"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="X:" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtX" Width="60" Margin="5,0,15,0" IsReadOnly="True"/>
                    <TextBlock Text="Y:" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtY" Width="60" Margin="5,0,0,0" IsReadOnly="True"/>
                </StackPanel>

                <!-- Boton para elegir posicion en el mapa -->
                <Button Content="Elegir posición en el mapa" 
                        Width="180"
                        Click="BtnElegirPosicion_Click"/>

                <!-- Boton final -->
                <Button Content="Agregar familiar"
                        Margin="0,15,0,0"
                        Width="150"
                        Click="BtnGuardar_Click"/>
            </StackPanel>

            <!-- PANEL DERECHO: foto / info extra -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Foto:"/>
                <Button Content="Seleccionar foto"
                        Margin="0,0,0,8"
                        Click="BtnSeleccionarFoto_Click"/>

                <!-- preview de la foto -->
                <Border BorderBrush="#DDD" BorderThickness="1" Width="140" Height="140">
                    <Image x:Name="ImgFoto" Stretch="UniformToFill"/>
                </Border>

                <TextBlock Text="* La posición se usa para mostrarlo en el mapa."
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           Foreground="Gray"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
