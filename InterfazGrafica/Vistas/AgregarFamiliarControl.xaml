<UserControl x:Class="InterfazGrafica.Vistas.AgregarFamiliarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterfazGrafica.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- título -->
            <RowDefinition Height="*"/>
            <!-- contenido -->
        </Grid.RowDefinitions>

        <TextBlock Text="Agregar familiar"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Contenido principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- formulario -->
                <ColumnDefinition Width="1.2*"/>
                <!-- preview / extra -->
            </Grid.ColumnDefinitions>

            <!-- FORMULARIO -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <!-- Nombre -->
                <TextBlock Text="Nombre:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="TxtNombre" Margin="-115,0,0,8" Width="294"/>

                <!-- Cédula -->
                <TextBlock Text="Cédula:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="TxtCedula" Margin="-258,0,0,8" Width="154"/>

                <!-- Fecha de nacimiento -->
                <TextBlock Text="Fecha de nacimiento:" FontSize="16" FontWeight="Bold"/>
                <DatePicker x:Name="DpFechaNacimiento" Margin="-205,0,0,8" Width="208"/>

                <!-- ¿Está vivo? / Fallecido -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <CheckBox x:Name="ChkNoEstaVivo"
                              Content="Ya no está con nosotros?"
                              Checked="ChkNoEstaVivo_Checked"
                              Unchecked="ChkNoEstaVivo_Unchecked" FontSize="14" FontWeight="Bold"/>
                </StackPanel>

                <TextBlock Text="Si tu familiar ya no está con nosotros, marca la casilla y escribe el año en que falleció."
                           FontSize="12"
                           Foreground="Black"
                           TextWrapping="Wrap"
                           Margin="0,0,0,4" FontWeight="Bold" FontStyle="Italic"/>

                <!-- Año de fallecimiento (deshabilitado por default) -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Año de fallecimiento:" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBox x:Name="TxtAnoFallecimiento"
                             Width="80"
                             Margin="5,0,0,0"
                             IsEnabled="False"/>
                </StackPanel>

                <!-- Ubicacion -->
                <TextBlock Text="Ubicación en el mapa:" FontWeight="Bold" Margin="0,10,0,4" FontSize="16"/>
                <Button Content="Elegir posición en el mapa"
                        Width="180"
                        Click="BtnElegirPosicion_Click" Background="#FF98BCE4" FontSize="14"/>

                <!-- Relaciones -->
                <TextBlock Text="Conectar con otro familiar:" FontWeight="Bold" Margin="0,15,0,5" FontSize="14"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="CmbFamiliares"
                    DisplayMemberPath="Nombre"
                    SelectedValuePath="Id"
                    Width="200"
                    Margin="0,0,10,0" />
                    <Button Content="Conectar familiar"
                     Width="130"
                    Click="BtnConectar_Click" Background="#FF98BCE4"/>
                </StackPanel>

                <!-- Boton final -->
                <Button Content="Agregar"
                        Margin="0,55,0,0"
                        Width="147"
                        Click="BtnGuardar_Click" Height="28" Background="#FF1A72D4" FontSize="18" FontWeight="Bold"/>
            </StackPanel>

            <!-- PANEL DERECHO: foto / info extra -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Foto:" FontSize="18"/>
                <Button Content="Seleccionar foto"
                        Margin="0,0,0,8"
                        Click="BtnSeleccionarFoto_Click" Background="#FF98BCE4" FontSize="16"/>

                <!-- preview de la foto -->
                <Border BorderBrush="#DDD" BorderThickness="1" Width="140" Height="140">
                    <Image x:Name="ImgFoto" Stretch="UniformToFill"/>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
